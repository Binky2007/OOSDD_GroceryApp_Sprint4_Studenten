<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BestSellingProductsView"
             x:DataType="vm:BestSellingProductsViewModel"
             Title="BestSellingProductsView">

    <Shell.TitleView>
        <Grid>
            <Label Text="Best verkochte producten" FontSize="Large" HorizontalOptions="Center" VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <!-- Header -->
            <Grid BackgroundColor="#C49B33" Padding="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Label Text="#" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                <Label Text="Product" Grid.Column="1" FontAttributes="Bold" TextColor="White"/>
                <Label Text="Stock" Grid.Column="2" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
                <Label Text="Aantal verkocht" Grid.Column="3" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
            </Grid>

            <!-- Items -->
            <CollectionView ItemsSource="{Binding Products}" SelectionMode="None" Margin="0">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:BestSellingProducts">
                        <Grid Padding="8" ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="{Binding Ranking}" Grid.Column="0" HorizontalOptions="Center"/>
                            <Label Text="{Binding Name}" Grid.Column="1"/>
                            <Label Text="{Binding Stock}" Grid.Column="2" HorizontalOptions="Center"/>
                            <Label Text="{Binding NrOfSells}" Grid.Column="3" HorizontalOptions="Center"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
