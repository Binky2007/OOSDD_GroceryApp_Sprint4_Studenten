<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             xmlns:m="clr-namespace:Grocery.Core.Models;assembly=Grocery.Core"
             x:Class="Grocery.App.Views.BoughtProductsView"
             x:DataType="vm:BoughtProductsViewModel"
             Title="Gekochte Producten">

    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Picker om een product te selecteren -->
        <Picker Grid.Row="0"
                Title="Selecteer een product"
                ItemsSource="{Binding Products}"
                ItemDisplayBinding="{Binding Name}"
                SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" />

        <!-- CollectionView met de gekochte producten -->
        <Border Grid.Row="1" Stroke="#C49B33" StrokeThickness="3" Padding="5" Margin="0,10,0,0">
            <CollectionView ItemsSource="{Binding BoughtProductsList}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:BoughtProducts">
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                
                            </Grid.ColumnDefinitions>

                            <!-- Toon Client naam -->
                            <Label Grid.Column="0"
                                   Text="{Binding Client.Name}"
                                   FontSize="16"
                                   VerticalOptions="Center"/>

                            <!-- Toon Boodschappenlijst naam -->
                            <Label Grid.Column="1"
                                   Text="{Binding GroceryList.Name}"
                                   FontSize="16"
                                   VerticalOptions="Center"/>

                        </Grid>
                    </DataTemplate>
                    
                </CollectionView.ItemTemplate>

                <!-- EmptyView als er geen producten zijn gekocht -->
                <CollectionView.EmptyView>
                    <ContentView>
                        <Label Text="Er zijn geen verkochte producten"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="CenterAndExpand"/>
                        
                        
                        
                        
                    </ContentView>
                    
                </CollectionView.EmptyView>
            </CollectionView>
        </Border>
    </Grid>
</ContentPage>
